<features xmlns="http://karaf.apache.org/xmlns/features/v1.4.0" name="jersey.karaf.feature">
    <feature name="hk2-karaf-feature" description="HK2 karaf feature" version="${project.version}">
        <bundle start-level="80">mvn:javax.annotation/javax.annotation-api/${javax.annotation-api.version}</bundle>
        <bundle start-level="80">mvn:javax.ws.rs/javax.ws.rs-api/${javax.ws.rs-api.version}</bundle>
        <bundle start-level="80">mvn:org.javassist/javassist/${javassist.version}</bundle>
        <bundle start-level="80">mvn:org.glassfish.hk2.external/javax.inject/${hk2.version}</bundle>
